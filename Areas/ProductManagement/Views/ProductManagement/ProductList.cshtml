@{
    ViewData["Title"] = "Product List";
    ViewData["Heading"] = "Products";
}
@model IEnumerable<Bicks.Models.Product>
<div class="create">
    <p>
        <a asp-action="CreateProduct">Create New</a>
    </p>
</div>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PricePerKg)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerKg)
                    </td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="DeleteProduct" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
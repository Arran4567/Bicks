@model IEnumerable<Bicks.Models.Category>

@{
    ViewData["Title"] = "Category List";
    ViewData["Heading"] = "Categories";
}

@section Toolbar {
    <li class="nav-item toolbar-item">
        <a asp-area="CategoryManagement" asp-controller="CategoryManagement" asp-action="CreateCategory">
            <i class="fa fa-plus"></i>
            <p class="">Add Category</p>
        </a>
    </li>
}
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="width: 20%" colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-area="ProductManagement" asp-controller="ProductManagement" asp-action="EditCategory" asp-route-id="@item.ID">
                        <i class="fa fa-pen"></i>
                        <p class="">Edit Product</p>
                    </a>
                </td>
                <td>
                    <a asp-area="ProductManagement" asp-controller="ProductManagement" asp-action="DeleteCategory   " asp-route-id="@item.ID">
                        <i class="fa fa-times"></i>
                        <p class="">Delete Product</p>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
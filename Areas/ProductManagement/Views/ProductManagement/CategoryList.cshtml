@model IEnumerable<Bicks.Models.Category>

@{
    ViewData["Title"] = "Categories List";
    ViewData["Heading"] = "Categories";
}

@section Toolbar {
    <li class="nav-item toolbar-item">
        <a asp-area="ProductManagement" asp-controller="ProductManagement" asp-action="CreateCategory">
            <i class="fa fa-plus"></i>
            <p class="">Add Category</p>
        </a>
    </li>
}

<script>
    $(document).ready(function () {
        $('#category-table').DataTable({
            "aaSorting": [],
            columnDefs: [{
                orderable: false,
                targets: [1, 2]
            }]
        });
    });
</script>

<section class="data-section">
    <h2 class="section-header">Clients</h2>
    <div class="section-body">
        <div class="text-center">
            <table id="category-table" class="table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr hidden>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="width: 20%" colspan="2">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-area="ProductManagement" asp-controller="ProductManagement" asp-action="EditCategory" asp-route-id="@item.ID">
                                    <i class="fa fa-pen"></i>
                                    <p class="">Edit Category</p>
                                </a>
                            </td>
                            <td>
                                <a asp-area="ProductManagement" asp-controller="ProductManagement" asp-action="DeleteCategory" asp-route-id="@item.ID">
                                    <i class="fa fa-trash"></i>
                                    <p class="">Delete Category</p>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>